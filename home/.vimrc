set belloff=all

set nocompatible
set nobackup
set showmode

set scrolloff=10
set cursorline
set cursorcolumn

set nowrap
set autoindent
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4

set hlsearch
set incsearch
set ignorecase

filetype on
filetype plugin on
filetype indent on
syntax on

set termguicolors
colorscheme catppuccin_mocha